                "computed": true,
                "forcenew": true
              },
              "description": {
                "type": "string",
                "description": "The description of the external data source.",
                "optional": true,
                "computed": true,
                "forcenew": true
              },
              "id": {
                "type": "string",
                "computed": true
              },
              "name": {
                "type": "string",
